<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/jieshouqi_edittexthanghaoLinearLayout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">


	<android.support.design.widget.AppBarLayout
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/AppTheme.AppBarOverlay"
		android:fitsSystemWindows="true">

		<android.support.v7.widget.Toolbar
			android:id="@+id/jieshouqiedittexthanghaoToolbar1"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="?attr/colorPrimary"
			app:popupTheme="@style/AppTheme.PopupOverlay"
			android:elevation="4dp"/>

	</android.support.design.widget.AppBarLayout>

	<HorizontalScrollView
		android:scrollbars="none"
		android:layout_height="match_parent"
		android:layout_width="match_parent">

		<ScrollView
			android:scrollbars="none"
			android:layout_marginLeft="1dp"
			android:layout_height="match_parent"
			android:layout_width="0dp"
			android:layout_weight="1.0">

			<com.vkejun.wjs.activity.Jiesouqi_edittexthanghao
				android:textColor="#424242"
				android:textSize="15sp"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@null"
				android:id="@+id/jieshouqiedittexthanghaoJiesouqi_edittexthanghao1"
				android:minWidth="1000dp"
				android:minHeight="1100dp"/>

		</ScrollView>

	</HorizontalScrollView>

</LinearLayout>

