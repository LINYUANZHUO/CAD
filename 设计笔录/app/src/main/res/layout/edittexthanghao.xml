<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/jieshouqi_edittexthanghaoLinearLayout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">


	<android.support.design.widget.AppBarLayout
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/AppTheme.AppBarOverlay"
		android:fitsSystemWindows="true">

		<android.support.v7.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="?attr/colorPrimary"
			app:popupTheme="@style/AppTheme.PopupOverlay"
			android:elevation="4dp"/>

	</android.support.design.widget.AppBarLayout>

	<EditText
		android:textSize="30sp"
		android:textColorHint="#FFAFAFAF"
		android:background="@null"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="5dp"
		android:hint="标题"
		android:ems="10"
		android:minLines="1"
		android:singleLine="false"
		android:lineSpacingExtra="4.599976dp"
		android:layout_marginRight="5dp"
		android:id="@+id/ftactivityEditText1"/>

	<View
		android:background="?android:attr/dividerVertical"
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"/>

	<HorizontalScrollView
		android:scrollbars="none"
		android:layout_height="match_parent"
		android:layout_width="match_parent">

		<ScrollView
			android:scrollbars="none"
			android:layout_marginLeft="1dp"
			android:layout_height="match_parent"
			android:layout_width="0dp"
			android:layout_weight="1.0">

			<com.vkejun.wjs.activity.Jiesouqi_edittexthanghao
				android:textColor="#424242"
				android:textSize="15sp"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@null"
				android:id="@+id/edittexthanghao"
				android:minWidth="1000dp"
				android:minHeight="1100dp"/>

		</ScrollView>

	</HorizontalScrollView>

</LinearLayout>

